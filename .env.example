# Postgres (контейнер db использует эти переменные напрямую)
POSTGRES_DB=jobdb
POSTGRES_USER=jobuser
POSTGRES_PASSWORD=jobpass

# Backend DB url (db — имя сервиса в docker-compose)
DATABASE_URL=postgresql+psycopg2://jobuser:jobpass@db:5432/jobdb

# Celery/Queue (redis — имя сервиса)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# CORS (чтобы фронт мог ходить в API из браузера)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# User-agent для подключения api hh
HH_USER_AGENT="job-search-app/1.0 (email@example.com)"

# Секреты (позже)
SECRET_KEY=change-me
GIGACHAT_TOKEN=
OPENAI_API_KEY=

# Embeddings
EMBEDDING_PROVIDER=localhash
EMBEDDING_MODEL=hashing-cpu
SBERT_MODEL_NAME=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_DIM=384
